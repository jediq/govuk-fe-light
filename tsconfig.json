{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": false,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*"],
  "exclude": ["**/*.test.*"]
}
